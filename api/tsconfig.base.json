{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["*"],
      "@libs/*": ["libs/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["apps/**/*", "tests/**/*", "jest.setup.ts"]
}
