{
  "name": "api",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "generate": "prisma generate --schema=./prisma/schema.prisma",
    "migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma",
    "dev:user": "ts-node-dev --respawn --project apps/user-service/tsconfig.json -r tsconfig-paths/register apps/user-service/src/server.ts",
    "dev:resource": "ts-node-dev --respawn --project apps/resource-service/tsconfig.json -r tsconfig-paths/register apps/resource-service/src/server.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "path": "^0.12.7",
    "prettier": "^3.5.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "nodemon": "^3.1.9",
    "prisma": "^6.6.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
